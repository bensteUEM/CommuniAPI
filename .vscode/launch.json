    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: sdist bdist_wheel",
            "type": "python",
            "request": "launch",
            "module": "setup",
            "args": [
              "sdist",
              "bdist_wheel"
            ],
            "cwd": "${workspaceFolder}"
          }
    ]
}